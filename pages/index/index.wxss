.search{
  padding: 10rpx 0 0rpx;
  display: flex;
  flex-direction: column;
}
.search .search-song{
  line-height: 36rpx;
  background: #fff;
  padding: 0 0 0 26rpx;
  display: flex;
  margin: 18rpx;
}
.search .history{
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 30rpx;
  background: #fff;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #f4f4f4; 
}
.search .cancel{
  display: inline-block;
  font-size: 24rpx;
  background: #f4f4f4;
  width: 80rpx;
  text-align: center;
  line-height: 60rpx;
}
.search .search-song icon{
  text-align: center;
  padding-right: 20rpx;
  padding-top: 20rpx;
}
.search input{
  display: inline-block;
  padding-top: 10rpx;
  flex: 1;
  font-size: 36rpx;
}
.search-list{
  height: 74rpx;
  background: #fff;
  padding: 6rpx 10rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
   overflow : hidden; 
}
.search-list .pic{
  width: 56rpx;
  height: 56rpx;
  display: inline-block;
  margin: 10rpx;
}
.search-list .pic image{
  width: 30rpx;
  height: 30rpx;
  margin: 13rpx;
}
.search-list .info{
  display: flex;
  flex-direction: column;
  text-overflow:ellipsis; 
  white-space : nowrap;
  overflow : hidden; 
}
.search-list .info .search-title{
  font-size: 32rpx;
  padding: 5rpx 0;
}
.search-list .info .all-info{
  font-size: 24rpx;
  text-overflow:ellipsis; 
  white-space : nowrap;
  overflow : hidden; 
}
.search .hot{
  background: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.search .hot .item{
  display: flex;
  font-size: 26rpx;
  flex-wrap: wrap;
}
.search .hot .hot-item{
   border: 1px solid #000;
   padding: 20rpx;
   border-radius: 30rpx;
   margin: 20rpx 0 0 20rpx;
}
.search .hot .hot-item.red{
  border: 1px solid red;
  color: red;
}

